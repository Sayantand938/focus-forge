{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "focus-forge",
  "version": "0.1.0",
  "identifier": "com.sayantan.focus-forge",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
      "title": "focus-forge",
      "width": 800,
      "height": 600,
      "minWidth": 900,
      "minHeight": 600,
      "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
